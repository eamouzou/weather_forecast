<!-- app/views/forecasts/show.html.erb -->
<div class="container mx-auto max-w-4xl px-4 py-6">
  <div class="flex justify-between items-center mb-8 animate-fade-in">
    <h1 class="text-4xl font-bold text-blue-700">Weather Forecast</h1>
    <%= link_to "New Search", root_path, 
        class: "bg-blue-100 text-blue-800 px-5 py-2 rounded-lg hover:bg-blue-200 transition-colors shadow-md hover:shadow-lg" %>
  </div>
  
<% if flash[:error] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
    <%= flash[:error] %>
  </div>
<% end %>
  
  <%= render partial: 'weather_data', class: 'animate-fade-in' %>
</div>
